# Hashi Environment Configuration Example
# Copy this file to .env and customize for your environment

# Server Configuration
PORT=3000
WEBSOCKET_PORT=3001
NODE_ENV=development

# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=hashi
DB_PORT=5432
DB_HOST=db

# ChimeraX Configuration
CHIMERAX_PATH=/usr/bin/chimerax
CHIMERAX_BASE_PORT=6100
MAX_CHIMERAX_INSTANCES=5
# OSMESA_AVAILABLE is set automatically on startup

# OpenGL Configuration
LIBGL_ALWAYS_SOFTWARE=1
MESA_GL_VERSION_OVERRIDE=3.3
DISPLAY=:99

# Docker Configuration
DOCKER_TARGET=production
TAG=latest

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=admin

# Security Configuration (change in production)
JWT_SECRET=dev-secret-replace-in-production
SESSION_SECRET=dev-session-secret-replace-in-production

# Admin Account (first run)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMeNow\!123
